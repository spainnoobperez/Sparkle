package_source()
{
    git clone --depth 1 -b "R_2_2_5" https://github.com/libexpat/libexpat.git
    rm -rf ./libexpat/.git
}

package_configure()
{
    cd ./libexpat/expat

    autoreconf -f -i

    ./configure \
    --prefix=${MOGRYPH_PREFIX} \
    --build=${MOGRYPH_BUILD} \
    --host=${MOGRYPH_HOST} \
    --without-xmlwf \
	--disable-shared \
	--enable-static
}

package_make()
{
    cd ./libexpat/expat
    make
}

package_install()
{
    cd ./libexpat/expat
    make DESTDIR="${MOGRYPH_TOOLCHAIN}/sysroot/" install
    make DESTDIR="${MOGRYPH_INSTALL_DIR}" install
    make maintainer-clean
}
