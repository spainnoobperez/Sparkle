package_source()
{
    git clone --depth 1 -b "v5.3" https://github.com/lua/lua.git
    rm -rf ./lua/.git
}

package_configure()
{
    echo "Patch me!"
}

package_make()
{
    cd ./lua
    make
}

package_install()
{
    cd ./lua
    cp liblua.a ${MOGRYPH_INSTALL_DIR}/usr/lib
    find . -name "*.o" -exec rm {} \;
    rm liblua.a
    rm lua
}
